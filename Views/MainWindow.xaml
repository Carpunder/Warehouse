<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Получить миссию" 
                HorizontalAlignment="Left" Margin="10,10,0,0" 
                VerticalAlignment="Top" Height="50" Width="130"
                Click="GetMission_OnClick"/>
        
        <Button Content="Импортировать коды" 
                HorizontalAlignment="Left" Margin="30,344,0,0" 
                VerticalAlignment="Top" Height="50" Width="130"
                Click="ShowFileDialog_OnClick" RenderTransformOrigin="0.538,0.501"/>
        
        <Button Content="Создать карту расскладки" 
                HorizontalAlignment="Left" Margin="500,344,0,0" 
                VerticalAlignment="Top" Height="50" Width="180"
                Click="GetMap_OnClick" RenderTransformOrigin="0.538,0.501"/>
    </Grid>
</Window>
